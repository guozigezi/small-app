.auth-page {
  min-height: 100vh;
  padding: 80rpx 48rpx 120rpx;
  background: linear-gradient(180deg, #f8fbff 0%, #ffffff 70%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.glass-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(41, 57, 105, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(18rpx);
}

.hero-panel {
  padding: 40rpx;
}

.hero-badge {
  display: inline-flex;
  padding: 8rpx 26rpx;
  border-radius: 999rpx;
  background: rgba(64, 200, 244, 0.15);
  color: #1d9fd3;
  font-size: 22rpx;
  font-weight: 600;
}

.hero-title {
  font-size: 42rpx;
  font-weight: 700;
  margin: 20rpx 0 12rpx;
  color: #1f2440;
}

.hero-desc {
  font-size: 26rpx;
  color: #7b859f;
  line-height: 1.6;
}

.auth-card {
  padding: 48rpx 40rpx 56rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.field-label {
  font-size: 26rpx;
  color: #7b859f;
}

.field input {
  width: 100%;
  padding: 28rpx 32rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(64, 200, 244, 0.25);
  background: rgba(245, 250, 255, 0.95);
  font-size: 30rpx;
}

.link-row {
  display: flex;
  justify-content: flex-end;
}

.text-link {
  font-size: 26rpx;
  color: #1d9fd3;
}

.primary-btn {
  width: 100%;
  padding: 28rpx 0;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #40c8f4, #2fabdd);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
}
