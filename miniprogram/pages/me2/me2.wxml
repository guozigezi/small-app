<!-- 登陆和未登陆 -->
<view class="login_root" wx:if="{{userInfo&&userInfo.name}}">
    <view>
        <view class="name">{{userInfo.name}}</view>
        <view class="tuichu" bindtap="tuichu">退出登录</view>
    </view>
</view>
<view wx:else class="login_root" bindtap="login">
    <view class="name">点击登陆</view>
</view>

<view wx:if="{{userInfo&&userInfo.name}}">
    <view class='my_item' bindtap="goChange">
        <text>修改资料</text>
        <view class='right_arrow' />
    </view>
    <view class="page">
    <view class="nav-son" bindtap="listpx">
        <text>待作答题目</text>
        <view class='right_arrow' />
    </view>
 
    <view class="temp {{pxopen ? 'slidown' : 'slidup'}} {{pxshow ? 'disappear':''}}">
        <view wx:for="{{wenjuan}}" bindtap="gotodati" data-text='{{index}}'>
            {{item}}     {{detail[index]}}
        </view>
    </view>
    </view>
    <view class='my_item' bindtap="listpx1">
        <text>我的答题记录</text>
        <view class='right_arrow' />
    </view>
    <view class="temp {{pxopen1 ? 'slidown' : 'slidup'}} {{pxshow1 ? 'disappear':''}}">
        <view wx:for="{{record}}" bindtap="record" data-text='{{index}}'>
            {{item}}    
        </view>
    </view>
</view>