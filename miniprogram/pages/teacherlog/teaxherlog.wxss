.auth-page {
  min-height: 100vh;
  padding: 80rpx 48rpx 120rpx;
  background: linear-gradient(180deg, #f6f7ff 0%, #ffffff 70%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.glass-card {
  background: rgba(255, 255, 255, 0.92);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(41, 57, 105, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(18rpx);
}

.hero-panel {
  padding: 40rpx;
}

.hero-badge {
  display: inline-flex;
  padding: 8rpx 26rpx;
  border-radius: 999rpx;
  background: rgba(106, 85, 255, 0.12);
  color: #6a55ff;
  font-size: 22rpx;
  font-weight: 600;
}

.hero-title {
  font-size: 42rpx;
  font-weight: 700;
  margin: 20rpx 0 12rpx;
  color: #1f2440;
}

.hero-desc {
  font-size: 26rpx;
  color: #7b859f;
  line-height: 1.6;
}

.auth-card {
  padding: 48rpx 40rpx 56rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.field-label {
  font-size: 26rpx;
  color: #7b859f;
}

.field input {
  width: 100%;
  padding: 28rpx 32rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(106, 85, 255, 0.2);
  background: rgba(248, 249, 255, 0.8);
  font-size: 30rpx;
}

.primary-btn {
  margin-top: 12rpx;
  width: 100%;
  padding: 28rpx 0;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #6a55ff, #8a72ff);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
}
